<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_bg"
    android:padding="10dp"
    android:layout_margin="6dp">

    <!-- Image -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/product_img_bg"/>

        <TextView
            android:id="@+id/discountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_margin="6dp"
            android:background="@drawable/discount_bg"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="-20%"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/favBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="6dp"
            android:text="ðŸ¤"
            android:textSize="16sp"/>
    </FrameLayout>

    <!-- Category -->
    <TextView
        android:id="@+id/categoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/chip_bg"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="ðŸŽ® ÐÐšÐšÐÐ£ÐÐ¢"
        android:textColor="@color/purple_primary"
        android:textSize="9sp"/>

    <!-- Name -->
    <TextView
        android:id="@+id/nameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Fortnite Account"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"/>

    <!-- Description -->
    <TextView
        android:id="@+id/descText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="150+ ÑÐºÐ¸Ð½Ð¾Ð²"
        android:textColor="@color/text_secondary"
        android:textSize="11sp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <!-- Price Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/oldPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000 â‚½"
                android:textColor="@color/text_hint"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3990 â‚½"
                android:textColor="@color/success"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/addBtn"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/btn_gradient">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </FrameLayout>
    </LinearLayout>

    <!-- Rating -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="â­" android:textSize="10sp"/>

        <TextView
            android:id="@+id/ratingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="4.9"
            android:textColor="@color/gold_accent"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/reviewsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="(128)"
            android:textColor="@color/text_hint"
            android:textSize="9sp"/>
    </LinearLayout>

</LinearLayout>